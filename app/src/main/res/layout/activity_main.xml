<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/result_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></TextView>


        <TextView
            android:id="@+id/fomula_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/C"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="C"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/DEL"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="DEL"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/div"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="/"
                    android:onClick="onclick"></Button>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/seven"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/eight"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/nine"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:onClick="onclick"></Button>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/four"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/five"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/six"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:onClick="onclick"></Button>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/one"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/two"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/three"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="onclick"></Button>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/zero"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="0"
                    android:onClick="onclick"></Button>
                <Button
                    android:id="@+id/dot"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="."
                    android:onClick="onclick"></Button>

            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/mul"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:onClick="onclick"></Button>
            <Button
                android:id="@+id/sub"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:onClick="onclick"></Button>
            <Button
                android:id="@+id/add"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:onClick="onclick"></Button>
            <Button
                android:id="@+id/equal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:text="="
                android:onClick="onclick"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>